@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contactos";
}
<h1 class="text-center">Agenda de Contactos</h1>

<div class="container">
    <div class="row">
        <div class="col-3 offset-9 mb-3">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-lg btn-primary d-block mx-auto">Nuevo Contacto</a>
        </div>
    </div>

    <div class="row">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Contactos</strong></h3>
            </div>
            <div class="card-body">
                <div class="tabletable-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.CellPhone)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contact in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => contact.Id)</td>
                                        <td>@Html.DisplayFor(m => contact.Name)</td>
                                        <td> @Html.DisplayFor(m => contact.Phone)</td>
                                        <td>@Html.DisplayFor(m => contact.CellPhone)</td>
                                        <td>@Html.DisplayFor(m => contact.Email)</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@contact.Id" class="btn btn-warning">Detalles</a>
                                            <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-primary">Editar</a>
                                            <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">No hay registros para mostrar</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

