@model Contact
@{
    ViewData["Title"] = "Detalle del Contacto";
}

<div class="container">
    <div class="row">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detlles del Contacto</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre:</strong> @Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group-item"><strong>Telefono:</strong> @Html.DisplayFor(m => m.Phone)</li>
                    <li class="list-group-item"><strong>Celular:</strong> @Html.DisplayFor(m => m.CellPhone)</li>
                    <li class="list-group-item"><strong>Email:</strong> @Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Nombre:</strong> @Html.DisplayFor(m => m.Name)</li>
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-lg btn-secondary">Volver</a>
                </ul>
            </div>
        </div>
    </div>
</div>